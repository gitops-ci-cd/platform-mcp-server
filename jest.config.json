{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "useESM": true
    }]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "extensionsToTreatAsEsm": [".ts"]
}
