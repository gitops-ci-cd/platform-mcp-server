# Server Configuration
PORT=8080
NODE_ENV=development  # Set to 'development' to bypass authentication for local testing

# Microsoft Entra ID (Azure AD) Authentication
# For development: Get token with `az login --allow-no-subscriptions` then
# `az account get-access-token --resource https://graph.microsoft.com --query accessToken -o tsv`
MS_ENTRA_TENANT_ID=changeme
MS_ENTRA_TOKEN=optional-for-development

# CORS Configuration
CORS_ORIGINS=http://localhost:8080

# Kubernetes Configuration (if needed)
# KUBECONFIG=/path/to/kubeconfig

# Vault Configuration
VAULT_ADDR=https://vault.acme.com

# Logging
LOG_LEVEL=info

# ArgoCD
ARGOCD_SERVER=https://argo.acme.com
ARGOCD_TOKEN=optional-for-development

# Artifactory
ARTIFACTORY_URL=https://artifactory.acme.com
ARTIFACTORY_API_KEY=optional-for-development
